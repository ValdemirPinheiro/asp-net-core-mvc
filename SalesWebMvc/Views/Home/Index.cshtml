@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/Business_plate_Vermont.svg.png" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    
                    <a class="btn btn-default" asp-controller="SalesRecords" asp-action="Index">
                        SALES RECORDS
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Business_plate_Vermont.svg.png" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    
                    <a class="btn btn-default" asp-controller="Departments" asp-action="Index">
                        DEPARTMENTS
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Business_plate_Vermont.svg.png" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                   
                    <a class="btn btn-default" asp-controller="Sellers" asp-action="Index">
                        SELLERS
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


